@page "/client"
@using RetirementPlanning.Services.ClientService;
@inject IClientService ClientService;
@inject NavigationManager NavigationManager
@attribute [StreamRendering(true)]

<PageTitle>Clients</PageTitle>

<h1>Client List</h1>

<p>This component demonstrates showing data from the server.</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Of Birth </th>
            <th>Account Name</th>
            <th>Social Security Start Year</th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var client in ClientService.Clients)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.DateOfBirth</td>
                <td>@client.accountIfo.Name</td>
                <td>@client.socialSecurity.StartYear</td>
                <td>
                    <button class="btn btn-primary" @onclick="(() => ShowClient(client.Id))"><i class="oi oi-pencil"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" @onclick="CreateNewClient">Create New Client</button>




@code {
    protected override async Task OnInitializedAsync()
    {
        await ClientService.GetClients();
    }

    void ShowClient(Guid id)
    {
        NavigationManager.NavigateTo($"client/{id}");
    }

    void CreateNewClient()
    {
        NavigationManager.NavigateTo("/client");
    }
}
